<%- include("partials/header") %> <%- include("partials/nav") %>

<main class="container py-4">
  <div class="text-center">
    <h2 class="h1 my-4">Bienvenue sur O'Okanban</h2>
    <p class="lead">
      Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy
      eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam
      voluptua.
    </p>
  </div>

  <div class="row mb-3 text-center flew-wrap">
    <% if (locals.error) { %>
      <%- include("partials/error") %>
    <% } else { for (const board of boards) { %>
    <div class="col-4">
      <div class="card mb-4">
        <div class="card-header">
          <h3 class="h2"><%= board.title %></h3>
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
          <h4 class="h3"><%= board.description %></h4>
          <a
            href="/board/<%=board.id%>"
            class="btn btn-lg btn-primary text-white"
          >
            voir ce board
          </a>
        </div>
      </div>
    </div>
    <% }} %>
  </div>
</main>

<%- include("partials/footer") %>
